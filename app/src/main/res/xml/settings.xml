<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="setting"
        app:title="설정">

        <ListPreference
            app:key="actionBar_color"
            app:title="툴바 색상 선택"
            android:entries="@array/color_name"
            android:entryValues="@array/color_values" />
        <ListPreference
            app:key="tx_color"
            app:title="글자색 선택"
            android:entries="@array/color_name"
            android:entryValues="@array/color_values" />

        <ListPreference
            app:key="tts_speed"
            app:title="tts 속도"
            android:entries="@array/tts_speed_name"
            android:entryValues="@array/tts_speed_value" />

        <ListPreference
            app:key="tts_pitch"
            app:title="tts 높낮이"
            android:entries="@array/tts_pitch_name"
            android:entryValues="@array/tts_pitch_value" />
    </PreferenceCategory>
</PreferenceScreen>